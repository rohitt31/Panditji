{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "https://panditji-backend.onrender.com/api/:match*"
        },
        {
            "source": "/uploads/:match*",
            "destination": "https://panditji-backend.onrender.com/uploads/:match*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}